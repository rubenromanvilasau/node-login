<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Node login</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
            <div class="navbar-nav ms-auto">
              <a class="nav-link" href="/signup">Registrarse</a>
              <a class="nav-link" href="/signin">Iniciar sesi√≥n</a>
              
            </div>
          </div>
        </div>
      </nav>
      
    <div class="container">
        <%if(signupMessage.length > 0){%>
            <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
              <strong>
                <%=signupMessage%>
              </strong>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <%}%>
        
        <%if(signinMessage.length> 0){%>

          <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
            <strong>
              <%=signinMessage%>
            </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <%}%>

        <%if(logoutMessage.length > 0){%>
          <div class="alert alert-secondary alert-dismissible fade show mt-2" role="alert">
            <strong>
              <%=logoutMessage%>
            </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      <%}%>

      <%if(passwordLengthMessage.length > 0){%>
        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
          <strong>
            <%=passwordLengthMessage%>
          </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <%}%>  

      <%if(profileAccessMessage.length> 0){%>
        <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
          <strong>
            <%=profileAccessMessage%>
          </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <%}%>
      
    
        <%-body%>
    </div>
