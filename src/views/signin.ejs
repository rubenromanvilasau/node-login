<%layout('layouts/main.ejs')%>
<div class="row mt-4" >
    <div class="col-md-4 offset-md-4 ">
        <div class="card mt-4 text-center" >
        <div class="card-header">
          <b>Sign In</b>  
        </div>
        <div class="card-body">
            <form action="/signin" method="post">
                <div class="form-group">
                    <input type="email" name="email" placeholder="Tu email" class="form-control" autofocus required>
                </div>
                <div class="form-group mt-4">
                    <input type="password" name="password" placeholder="Tu password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-4">
                    Sign In!
                </button>
            </form>
        </div>
    </div>
</div>
</div>